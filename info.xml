<?xml version="1.0"?>
<extension key="com.skvare.managegroup" type="module">
  <file>managegroup</file>
  <name>Manage Groups with Scheduled Actions</name>
  <description>Automatically manage CiviCRM groups with scheduled disable/delete actions based on configured dates. Includes mailing and reminder tracking features.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Sunil Pawar</author>
    <email>sunil@skvare.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/Skvare/com.skvare.managegroup</url>
    <url desc="Documentation">https://github.com/Skvare/com.skvare.managegroup</url>
    <url desc="Support">https://github.com/Skvare/com.skvare.managegroup</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-06-20</releaseDate>
  <version>1.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.38</ver>
    <ver>5.45</ver>
    <ver>5.50</ver>
    <ver>5.60</ver>
    <ver>5.70</ver>
  </compatibility>
  <comments>Production-ready extension for automated group management with scheduled actions</comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
    <psr0 prefix="CRM_" path="."/>
  </classloader>
  <civix>
    <namespace>CRM/Managegroup</namespace>
    <angularModule>crmManagegroup</angularModule>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
  <upgrader>CRM_Managegroup_Upgrader</upgrader>
</extension>
